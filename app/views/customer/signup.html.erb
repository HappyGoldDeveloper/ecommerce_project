<h1>Sign Up</h1>

 <div>
  <%= simple_form_for @customer ,:url => {:action => 'create'} do |f| %>
  <%= f.input :username %>
  <%= f.input :password %>
  <%= f.input :firstname %>
  <%= f.input :lastname %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :email %>
  <%= f.input :province_id ,as: :select, collection: @provinces ,label_method: :name, value_method: :id%>
  <%= f.button :submit %>
<% end %>
</div>