<div>
    <h2>Categories</h2>
    <% cat = Category.all%>
        <% cat.each do |c|%>
        <p><%= link_to c.name ,results_category_index_path(:category => c.id)%></p>
        <%end%> 
 <div>
 <div>
    <%= form_tag(results_filter_index_path, method: "get") do %>
    <%= label_tag(:query, "Filter:") %>
    <%= collection_select(:query_deal,:deal_id,Deal.all.order(:name),:id,:name,{:include_blank => ''})%>
    <%= submit_tag("Filter") %>
    <% end %>
    <br>
    <br>
 <div>
 <div>
      <%= form_tag(results_search_index_path, method: "get") do %>
      <%= label_tag(:q, "Search:") %>
      <%= text_field_tag(:q) %>
      <%= collection_select(:query_category,:category_id,Category.all.order(:name),:id,:name,{:include_blank => 'Model'})%>
      <%= submit_tag("Search") %>
      <% end %>
    </div>



<h1><%=@car.manufacturer%> <%=@car.model%></h1> <b><%= @car.deal.name%></b>
<p><img src="<%=@car.image%>" alt="Car" onerror="this.src='/assets/imageNotFound.jpg'" height="300" width="500"></p>
<p><b>Manufacturer: </b><%=@car.manufacturer%></p>
<p><b>Model: </b><%=@car.model%></p>
<p><b>Price: </b>$<%=@car.price%></p>
<p><b>Body Type: </b><%=@car.body_type%></p>
<p><b>Engine: </b><%=@car.engine%></p>
<p><b>Transmission: </b><%=@car.transmission%></p>

<% if @car.stock > 0 %>

    <% if user_signed_in? %>
    <div><%= link_to 'Add to Cart' , cart_create_path%></div>
    <% else %>
     <div><%= link_to 'Add to Cart' , user_session_path%></div>
    <% end %>
    

<% else %>
<div class = "message_box">
    <p class = "message">Sorry this Vehicle is Currently Unavailable.</p>
</div>

<% end %>

