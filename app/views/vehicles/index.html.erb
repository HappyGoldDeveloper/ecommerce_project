 <div>
 <h2>Categories</h2>
 <% cat = Category.all%>
 <% cat.each do |c|%>
    <p><%= link_to c.name ,results_category_index_path(:category => c.id)%></p>
    <%end%>

 
 <div>
 <div>
    <%= form_tag(results_filter_index_path, method: "get") do %>
    <%= label_tag(:query, "Filter:") %>
    <%= collection_select(:query_deal,:deal_id,Deal.all.order(:name),:id,:name,{:include_blank => ''})%>
    <%= submit_tag("Filter") %>
    <% end %>
    <br>
    <br>
 <div>

 <div>
      <%= form_tag(results_search_index_path, method: "get") do %>
      <%= label_tag(:q, "Search:") %>
      <%= text_field_tag(:q) %>
      <%= collection_select(:query_category,:category_id,Category.all.order(:name),:id,:name,{:include_blank => 'Model'})%>
      <%= submit_tag("Search") %>
      <% end %>
</div>

<h1>Vehicles</h1>

<%= paginate @cars %>

<% @cars.each do |car_each|%>

<p><img src="<%=car_each.image%>" alt="Car" onerror="this.src='/assets/imageNotFound.jpg'" height="300" width="500"></p>
<p>Vehicle: <%= car_each.manufacturer%> <%= link_to car_each.model, car_each%></p>

<% end %>
