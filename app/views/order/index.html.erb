


<% if @orders.empty? %>
  

<h1>No orders to show</h1>


<% else %>
<h1><%= current_user.email%>'s Orders</h1>
<table>
<tr>
    <th>Order date</th>
    <th>Order status</th>
    <th>View</th>
</tr>

<% @orders.each do |order|%>
    <tr>
        <td><%= order.created_at%></td>
        <td><%= order.order_status.name%></td>
        <td><%= link_to "See order details" , order_show_path(:id => order.id ) %></td>
    </tr>
<% end %>


</table>

<% end %>