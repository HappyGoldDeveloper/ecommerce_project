
<%if @vehicles.empty?%>
    <h1>No Vehicle Found</h1>
<% else%>
    <% if @vehicles.count == 1 %>
      <h1>We have <%=@vehicles.count%> vehicle in <%=@vehicles.first.deal.name %>.</h1>
    <% else %>
      <h1>We have <%=@vehicles.count%> vehicles in <%=@vehicles.first.deal.name %>.</h1>
    <% end %>

    <%@vehicles.each do |car|%>

    <p><img src="<%=car.image%>" alt="Car" onerror="this.src='/assets/imageNotFound.jpg'" height="300" width="500"></p>
    <p>Model: <%= link_to car.model , car%></p>

    <%end%>
<% end%>